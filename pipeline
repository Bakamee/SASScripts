pipeline{

    agent {label "sasmachine"}
    stages{
        stage('prepare'){
            steps{
                sh "echo helloworld"
            }
        }
        stage('New Code'){
            steps{
             echo "new code commited"
             
            }
        }
        stage('Checkout to Production'){
            when {
               environment ignoreCase: true, name: 'ref', value: 'tag'
            }
            steps{
             echo "Tag name ${tagID}"
            }

        }

        
    } 
}   
